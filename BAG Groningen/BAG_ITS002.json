{
    "name": "BAG_ITS002",
    "title": "BAG 2 Opdracht naar tekenaar (NB)",
    "display": "form",
    "type": "form",
    "components": [
        {
            "html": "<h2>Opdracht tekenaar, proces nummerbeschikking</h2>",
            "label": "HF_Opdrachttekenaar",
            "refreshOnChange": false,
            "key": "HF_Opdrachttekenaar",
            "type": "content",
            "input": false,
            "tableView": false
        },
        {
            "html": "<p>Zaaknummer</p>",
            "label": "PA_Toelichting",
            "refreshOnChange": false,
            "key": "PA_Toelichting",
            "type": "content",
            "input": false,
            "tableView": false
        },
        {
            "label": "Reden van starten proces nummerbeschikking:",
            "widget": "html5",
            "tableView": true,
            "data": {
                "values": [
                    {
                        "label": "Verleende vergunning",
                        "value": "verleendeVergunning"
                    },
                    {
                        "label": "Terugmelding",
                        "value": "terugmelding"
                    }
                ]
            },
            "validate": {
                "required": true
            },
            "validateWhenHidden": false,
            "key": "CO_RedenStartNummerbeschikking",
            "type": "select",
            "input": true,
            "disabled": true
        },
        {
            "label": "Toelichting nummerbeschikking aan tekenaar:",
            "type": "textarea",
            "key": "TA_ToelichtingNummerBeschikkingTekenaar",
            "input": true,
            "autoExpand": false,
            "disabled": true
        },
        {
            "label": "Beoordeling tekening:",
            "key": "RB_BeoordelingTekenaar",
            "type": "radio",
            "input": true,
            "optionsLabelPosition": "right",
            "inline": false,
            "tableView": false,
            "disabled": true,
            "values": [
                {
                    "label": "Akkoord",
                    "value": "akkoord"
                },
                {
                    "label": "Niet akkoord",
                    "value": "nietAkkoord"
                }
            ],
            "validateWhenHidden": false,
            "validate": {
                "required": true
            },
            "conditional": {
                "show": true,
                "conjunction": "all",
                "conditions": [
                    {
                        "component": "RB_BeoordelingTekenaar",
                        "operator": "isNotEmpty"
                    }
                ]
            }
        },
        {
            "label": "Toelichting van BAG-beheerder die de tekening heeft beoordeeld:",
            "type": "textarea",
            "key": "TA_ToelichtingControleTekenaar",
            "input": true,
            "autoExpand": false,
            "disabled": true,
            "conditional": {
                "show": true,
                "conjunction": "all",
                "conditions": [
                    {
                        "component": "TA_ToelichtingControleTekenaar",
                        "operator": "isNotEmpty"
                    }
                ]
            }
        },
        {
            "label": "Toelichting van tekenaar:",
            "type": "textarea",
            "key": "TA_ToelichtingTekenaar",
            "input": true,
            "autoExpand": false,
            "validate": {
                "required": true
            }
        },
        {
            "type": "groepMedewerkerFieldset",
            "key": "AG_ToewijzenControleurTekenaar",
            "label": "Toewijzen aan BAG beheerder die de controle moet gaan uitvoeren:",
            "input": false,
            "components": [
                {
                    "label": "Groep",
                    "type": "select",
                    "key": "AG_ToewijzenControleurTekenaar_Groep",
                    "input": true,
                    "widget": "html5",
                    "dataSrc": "custom",
                    "clearOnRefresh": true,
                    "validate": {
                        "required": true
                    },
                    "attributes": {
                        "ZAC_TYPE": "ZAC_groep"
                    }
                },
                {
                    "label": "Medewerker",
                    "type": "select",
                    "key": "AG_ToewijzenControleurTekenaar_Medewerker",
                    "widget": "html5",
                    "input": true,
                    "dataSrc": "custom",
                    "refreshOn": "AG_ToewijzenControleurTekenaar_Groep",
                    "clearOnRefresh": true,
                    "validate": {
                        "required": true
                    },
                    "attributes": {
                        "ZAC_TYPE": "ZAC_medewerker"
                    }
                }
            ]
        },
        {
            "label": "Tekening is als bijlage toegevoegd:",
            "type": "checkbox",
            "key": "CB_BijlageTekening",
            "input": true,
            "defaultValue": false,
            "validate": {
                "required": true
            }
        },
        {
            "label": "Buttons",
            "key": "buttons",
            "type": "container",
            "input": false,
            "tableView": false,
            "components": [
                {
                    "type": "columns",
                    "columns": [
                        {
                            "width": "auto",
                            "components": [
                                {
                                    "key": "save",
                                    "label": "Opslaan",
                                    "type": "button",
                                    "theme": "secondary",
                                    "input": true,
                                    "action": "saveState",
                                    "state": "draft",
                                    "tableView": false
                                }
                            ]
                        },
                        {
                            "width": "auto",
                            "components": [
                                {
                                    "key": "submit",
                                    "label": "Opslaan & afronden",
                                    "type": "button",
                                    "input": true,
                                    "disableOnInvalid": true,
                                    "tableView": false
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}