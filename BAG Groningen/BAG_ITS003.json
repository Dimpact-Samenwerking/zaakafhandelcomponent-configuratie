{
    "name": "BAG_ITS003",
    "title": "BAG 3 Beoordeling door BAG-beheerder :tekening (NB)",
    "display": "form",
    "type": "form",
    "components": [
        {
            "html": "<h2>Beoordelen tekening door BAG-beheerder</h2>",
            "label": "HF_BeoordelenTekening",
            "refreshOnChange": false,
            "key": "HF_BeoordelenTekening",
            "type": "content",
            "input": false,
            "tableView": false
        },
        {
            "html": "<p>Zaaknummer</p>",
            "label": "PA_Toelichting",
            "refreshOnChange": false,
            "key": "PA_Toelichting",
            "type": "content",
            "input": false,
            "tableView": false
        },
        {
            "label": "Reden van starten proces nummerbeschikking:",
            "widget": "html5",
            "tableView": true,
            "data": {
                "values": [
                    {
                        "label": "Verleende vergunning",
                        "value": "verleendeVergunning"
                    },
                    {
                        "label": "Terugmelding",
                        "value": "terugmelding"
                    }
                ]
            },
            "validate": {
                "required": true
            },
            "validateWhenHidden": false,
            "key": "CO_RedenStartNummerbeschikking",
            "type": "select",
            "input": true,
            "disabled": true
        },
        {
            "label": "Toelichting nummerbeschikking aan tekenaar:",
            "type": "textarea",
            "key": "TA_ToelichtingNummerBeschikkingTekenaar",
            "input": true,
            "autoExpand": false,
            "disabled": true
        },
        {
            "label": "Toelichting van tekenaar:",
            "type": "textarea",
            "key": "TA_ToelichtingTekenaar",
            "input": true,
            "autoExpand": false,
            "disabled": true
        },
        {
            "label": "Beoordeling tekening:",
            "key": "RB_BeoordelingTekenaar",
            "type": "radio",
            "input": true,
            "optionsLabelPosition": "right",
            "inline": false,
            "tableView": false,
            "values": [
                {
                    "label": "Akkoord",
                    "value": "akkoord"
                },
                {
                    "label": "Niet akkoord",
                    "value": "nietAkkoord"
                }
            ],
            "validateWhenHidden": false,
            "validate": {
                "required": true
            }
        },
        {
            "label": "Toelichting van de BAG-beheerder die de tekening heeft beoordeeld:",
            "type": "textarea",
            "key": "TA_ToelichtingControleTekenaar",
            "input": true,
            "autoExpand": false,
            "validate": {
                "required": true
            }
        },
        {
            "label": "Buttons",
            "key": "buttons",
            "type": "container",
            "input": false,
            "tableView": false,
            "components": [
                {
                    "type": "columns",
                    "columns": [
                        {
                            "width": "auto",
                            "components": [
                                {
                                    "key": "save",
                                    "label": "Opslaan",
                                    "type": "button",
                                    "theme": "secondary",
                                    "input": true,
                                    "action": "saveState",
                                    "state": "draft",
                                    "tableView": false
                                }
                            ]
                        },
                        {
                            "width": "auto",
                            "components": [
                                {
                                    "key": "submit",
                                    "label": "Opslaan & afronden",
                                    "type": "button",
                                    "input": true,
                                    "disableOnInvalid": true,
                                    "tableView": false
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}