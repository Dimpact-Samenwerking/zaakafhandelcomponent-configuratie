{
    "name": "BAG_ITS007",
    "title": "BAG 7 Opdracht uitzetten bij ondertekenaar van schriftelijke verklaring (SV)",
    "display": "form",
    "type": "form",
    "components": [
        {
            "html": "<h2>Opdracht uitzetten bij ondertekenaar van schriftelijke verklaring</h2>",
            "label": "HF_OpdrachtUitzettenNaarOndertekenaar",
            "refreshOnChange": false,
            "key": "HF_OpdrachtUitzettenNaarOndertekenaar",
            "type": "content",
            "input": false,
            "tableView": false
        },
        {
            "html": "<p>Zaaknummer</p>",
            "label": "PA_Toelichting",
            "refreshOnChange": false,
            "key": "PA_Toelichting",
            "type": "content",
            "input": false,
            "tableView": false
        },
        {
            "label": "Reden van starten proces nummerbeschikking:",
            "widget": "html5",
            "tableView": true,
            "data": {
                "values": [
                    {
                        "label": "Terugmelding",
                        "value": "terugmelding"
                    },
                    {
                        "label": "Gemiste wettelijke termijn",
                        "value": "gemisteWettelijkeTermijn"
                    }
                ]
            },
            "validateWhenHidden": false,
            "key": "CO_RedenStartSchriftelijkeVerklaring",
            "type": "select",
            "input": true,
            "disabled": true
        },
        {
            "label": "Toelichting schriftelijke verklaring:",
            "type": "textarea",
            "key": "TA_ToelichtingSchriftelijkeVerklaring",
            "input": true,
            "autoExpand": false,
            "disabled": true
        },
        {
            "label": "Beoordeling schriftelijke verklaring:",
            "key": "RB_BeoordelingSchriftelijkeVerklaring",
            "type": "radio",
            "input": true,
            "optionsLabelPosition": "right",
            "inline": false,
            "tableView": false,
            "disabled": true,
            "values": [
                {
                    "label": "Akkoord",
                    "value": "akkoord"
                },
                {
                    "label": "Niet akkoord",
                    "value": "nietAkkoord"
                }
            ],
            "validateWhenHidden": false,
            "validate": {
                "required": true
            },
            "conditional": {
                "show": true,
                "conjunction": "all",
                "conditions": [
                    {
                        "component": "RB_BeoordelingSchriftelijkeVerklaring",
                        "operator": "isNotEmpty"
                    }
                ]
            }
        },
        {
            "label": "Toelichting van de BAG-beheerder die de controle heeft uitgevoerd:",
            "type": "textarea",
            "key": "TA_ToelichtingBagbeheerderControle",
            "input": true,
            "autoExpand": false,
            "disabled": true,
            "conditional": {
                "show": true,
                "conjunction": "all",
                "conditions": [
                    {
                        "component": "TA_ToelichtingBagbeheerderControle",
                        "operator": "isNotEmpty"
                    }
                ]
            }
        },
        {
            "label": "Opdracht uitzetten bij ondertekenaar",
            "widget": "html5",
            "tableView": true,
            "data": {
                "values": [
                    {
                        "label": "Ambtelijke correctie",
                        "value": "ambtelijkeCorrectie"
                    },
                    {
                        "label": "Proces verbaal van constatering",
                        "value": "procesVerbaalVanConstatering"
                    },
                    {
                        "label": "Wijziging t.b.v. een goede registratie",
                        "value": "wijzigingTbvEenGoedeRegistratie"
                    }
                ]
            },
            "validateWhenHidden": false,
            "key": "CO_TeBeoordelenSchriftelijkeVerklaring",
            "type": "select",
            "input": true,
            "validate": {
                "required": true
            }
        },
        {
            "label": "Nadere toelichting van BAG-beheerder aan de ondertekenaar:",
            "type": "textarea",
            "key": "TA_ToelichtingBagbeheerderAanOndertekenaar",
            "input": true,
            "autoExpand": false,
            "validate": {
                "required": true
            }
        },
        {
            "type": "groepMedewerkerFieldset",
            "key": "AG_ToewijzingBagbeheerderControle",
            "label": "Toewijzen aan BAG beheerder die de controle moet gaan uitvoeren:",
            "input": false,
            "components": [
                {
                    "label": "Groep",
                    "type": "select",
                    "key": "AG_ToewijzingBagbeheerderControle_Groep",
                    "input": true,
                    "widget": "html5",
                    "dataSrc": "custom",
                    "clearOnRefresh": true,
                    "validate": {
                        "required": true
                    }
                },
                {
                    "label": "Medewerker",
                    "type": "select",
                    "key": "AG_ToewijzingBagbeheerderControle_Medewerker",
                    "widget": "html5",
                    "input": true,
                    "dataSrc": "custom",
                    "refreshOn": "AG_ToewijzingBagbeheerderControle_Groep",
                    "clearOnRefresh": true,
                    "validate": {
                        "required": true
                    }
                }
            ]
        },
        {
            "label": "Buttons",
            "key": "buttons",
            "type": "container",
            "input": false,
            "tableView": false,
            "components": [
                {
                    "type": "columns",
                    "columns": [
                        {
                            "width": "auto",
                            "components": [
                                {
                                    "key": "save",
                                    "label": "Opslaan",
                                    "type": "button",
                                    "theme": "secondary",
                                    "input": true,
                                    "action": "saveState",
                                    "state": "draft",
                                    "tableView": false
                                }
                            ]
                        },
                        {
                            "width": "auto",
                            "components": [
                                {
                                    "key": "submit",
                                    "label": "Opslaan & afronden",
                                    "type": "button",
                                    "input": true,
                                    "disableOnInvalid": true,
                                    "tableView": false
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}