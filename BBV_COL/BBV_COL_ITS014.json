{
    "naam": "BBV_COL_ITS014",
    "title": "BBV 14 BBV 14 Accorderen tekstuele wijzigingen",
    "display": "form",
    "type": "form",
    "components": [
        {
            "html": "<h2>Accorderen tekstuele wijzigingen door Secretaris Collegevergaderingen</h2>",
            "label": "Accorderen tekstuele wijzigingen door Secretaris Collegevergaderingen",
            "refreshOnChange": false,
            "key": "HF_AccorderenTekstueleWijzigingen",
            "type": "content",
            "input": false,
            "tableView": false
        },
        {
            "label": "Het voorstel is op de agenda gezet voor de Collegevergadering op:",
            "type": "datetime",
            "key": "DF_VoorstelDefinitiefOpAgendaGezet",
            "input": true,
            "useLocaleSettings": true,
            "format": "dd-MM-yyyy",
            "datePicker": {
                "disableWeekends": false,
                "disableWeekdays": false,
                "minDate": "moment()"
            },
            "enableTime": false,
            "enableMinDateInput": true,
            "enableMaxDateInput": false,
            "widget": {
                "type": "calendar",
                "displayInTimezone": "viewer",
                "locale": "nl",
                "useLocaleSettings": true,
                "allowInput": true,
                "mode": "single",
                "enableTime": false,
                "noCalendar": false,
                "format": "dd-MM-yyyy",
                "minDate": "moment()"
            },
            "validate": {
                "required": true
            },
            "disabled": true
        },
        {
            "label": "Besluitpunten:",
            "type": "textarea",
            "key": "TA_Besluitpunten",
            "input": true,
            "autoExpand": false,
            "disabled": true,
            "validate": {
                "required": true
            }
        },
        {
            "label": "Samenvatting:",
            "type": "textarea",
            "key": "TA_Samenvatting",
            "input": true,
            "autoExpand": false,
            "disabled": true,
            "validate": {
                "required": true
            }
        },
        {
            "label": "Het betreft een:",
            "widget": "html5",
            "tableView": true,
            "data": {
                "values": [
                    {
                        "label": "Collegevoorstel",
                        "value": "collegevoorstel"
                    },
                    {
                        "label": "Raadsvoorstel",
                        "value": "raadsvoorstel"
                    }
                ]
            },
            "validate": {
                "required": true
            },
            "validateWhenHidden": false,
            "key": "CO_Betreft",
            "type": "select",
            "disabled": true,
            "input": true
        },
        {
            "label": "Tekstuele wijzigingen (College):",
            "type": "textarea",
            "key": "TA_BerichtTekstueleWijzigingen",
            "input": true,
            "autoExpand": false,
            "disabled": true,
            "validate": {
                "required": true
            }
        },
        {
            "label": "Tekstuele wijzigingen (portefeuillehouder):",
            "type": "textarea",
            "key": "TA_BerichtTekstueleWijzigingen_PO",
            "input": true,
            "autoExpand": false,
            "disabled": true,
            "validate": {
                "required": true
            },
            "customConditional": "show = data.TA_BerichtTekstueleWijzigingen_PO && data.TA_BerichtTekstueleWijzigingen_PO.trim() !=='';"
        },
        {
            "label": "Vervolg:",
            "widget": "html5",
            "tableView": true,
            "data": {
                "values": [
                    {
                        "label": "De tekstuele wijzigingen van het College van B&W zijn akkoord",
                        "value": "akkoord"
                    },
                    {
                        "label": "Voorstel aanpassen",
                        "value": "voorstelAanpassen"
                    }
                ]
            },
            "validate": {
                "required": true
            },
            "validateWhenHidden": false,
            "key": "CO_BesluitTekstueleWijzigingen",
            "type": "select",
            "input": true
        },
        {
            "html": "<h4>Terug naar steller</h4>",
            "label": "Terug naar steller",
            "refreshOnChange": false,
            "key": "HF_TerugNaarStellerTekstueleWijzigingen",
            "type": "content",
            "input": false,
            "tableView": false,
            "conditional": {
                "show": true,
                "when": "CO_BesluitTekstueleWijzigingen",
                "eq": "voorstelAanpassen"
            }
        },
        {
            "label": "Bericht aan steller:",
            "type": "textarea",
            "key": "TA_BerichtTekstueleWijzigingen",
            "input": true,
            "clearOnHide" : false,
            "autoExpand": false,
            "validate": {
                "required": true
            },
            "conditional": {
                "show": true,
                "when": "CO_BesluitTekstueleWijzigingen",
                "eq": "voorstelAanpassen"
            }
        },
        {
            "html": "<h4>Afronden</h4>",
            "label": "Afronden",
            "refreshOnChange": false,
            "key": "HF_AfrondenITS014",
            "type": "content",
            "input": false,
            "tableView": false,
            "customConditional": "show = data.CO_Betreft === 'collegevoorstel' && data.CO_BesluitTekstueleWijzigingen === 'akkoord';"
        },
        {
            "label": "Collegebrief moet naar de Raad:",
            "widget": "html5",
            "tableView": true,
            "data": {
                "values": [
                    {
                        "label": "Ja, ter kennisname",
                        "value": "ja"
                    },
                    {
                        "label": "Nee",
                        "value": "nee"
                    }
                ]
            },
            "validate": {
                "required": true
            },
            "validateWhenHidden": false,
            "clearOnHide": false,
            "key": "CO_CollegevoorstelNaarRaad",
            "type": "select",
            "input": true,
            "customConditional": "show = data.CO_Betreft === 'collegevoorstel' && data.CO_BesluitTekstueleWijzigingen === 'akkoord';"
        },
        {
            "label": "Buttons",
            "key": "buttons",
            "type": "container",
            "input": false,
            "tableView": false,
            "components": [
                {
                    "type": "columns",
                    "columns": [
                        {
                            "width": "auto",
                            "components": [
                                {
                                    "key": "submit",
                                    "label": "Afronden",
                                    "type": "button",
                                    "input": true,
                                    "tableView": false
                                }
                            ]
                        },
                        {
                            "width": "auto",
                            "components": [
                                {
                                    "key": "save",
                                    "label": "Opslaan",
                                    "type": "button",
                                    "action": "saveState",
                                    "state": "draft",
                                    "disableOnInvalid": true,
                                    "input": true,
                                    "tableView": false
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}