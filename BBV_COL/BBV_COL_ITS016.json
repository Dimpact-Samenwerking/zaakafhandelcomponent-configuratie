{
    "naam": "BBV_COL_ITS016",
    "title": "BBV 16 Terugmelding Collegebesluit",
    "display": "form",
    "type": "form",
    "components": [
        {
            "html": "<h2>Terugmelding Collegebesluit</h2>",
            "label": "Terugmelding Collegebesluit",
            "refreshOnChange": false,
            "key": "HF_TerugmeldingCollegebesluit",
            "type": "content",
            "input": false,
            "tableView": false
        },
        {
            "label": "Het betreft een:",
            "widget": "html5",
            "tableView": true,
            "data": {
                "values": [
                    {
                        "label": "Collegevoorstel",
                        "value": "collegevoorstel"
                    },
                    {
                        "label": "Raadsvoorstel",
                        "value": "raadsvoorstel"
                    }
                ]
            },
            "validate": {
                "required": true
            },
            "validateWhenHidden": false,
            "key": "CO_Betreft",
            "type": "select",
            "input": true,
            "disabled": true
        },
        {
            "html": "<h5>Besluit college Collegevoorstel</h5>",
            "label": "Besluit college Collegevoorstel",
            "refreshOnChange": false,
            "key": "HF_BesluitCollegevoorstel",
            "type": "content",
            "input": false,
            "tableView": false,
            "conditional": {
                "show": true,
                "when": "CO_Betreft",
                "eq": "collegevoorstel"
            }
        },
        {
            "html": "<h5>Besluit college Raadsvoorstel</h5>",
            "label": "Besluit college Raadsvoorstel",
            "refreshOnChange": false,
            "key": "HF_BesluitRaadsvoorstel",
            "type": "content",
            "input": false,
            "tableView": false,
            "conditional": {
                "show": true,
                "when": "CO_Betreft",
                "eq": "raadsvoorstel"
            }
        },
        {
            "label": "Besluit:",
            "widget": "html5",
            "tableView": true,
            "data": {
                "values": [
                    {
                        "label": "Besloten conform voorstel",
                        "value": "beslotenConformVoorstel"
                    },
                    {
                        "label": "Gewijzigd vastgesteld",
                        "value": "gewijzigdVastgesteld"
                    },
                    {
                        "label": "Vastgesteld onder mandaat",
                        "value": "vastgesteldOnderMandaat"
                    },
                    {
                        "label": "Ingetrokken",
                        "value": "ingetrokken"
                    },
                    {
                        "label": "Voorstel aanpassen",
                        "value": "voorstelAanpassen"
                    },
                    {
                        "label": "Aangehouden, later behandelen op",
                        "value": "aangehouden"
                    }
                ]
            },
            "validate": {
                "required": true
            },
            "validateWhenHidden": false,
            "key": "CO_BesluitVoorstel",
            "type": "select",
            "input": true,
            "disabled": true
        },
        {
            "label": "Collegebrief moet naar de Raad:",
            "widget": "html5",
            "tableView": true,
            "data": {
                "values": [
                    {
                        "label": "Ja, ter kennisname",
                        "value": "ja"
                    },
                    {
                        "label": "Nee",
                        "value": "nee"
                    }
                ]
            },
            "validate": {
                "required": true
            },
            "validateWhenHidden": false,
            "key": "CO_CollegevoorstelNaarRaad",
            "type": "select",
            "disabled": true,
            "input": true,
            "customConditional": "const v = data.CB_Brieven || {}; show = Object.values(v).some(x => x === true) && data.CO_Betreft === 'collegevoorstel';"
        },
        {
            "label": "Brief aan Raad is:",
            "type": "radio",
            "key": "RB_BriefRaad",
            "input": true,
            "disabled": true,
            "optionsLabelPosition": "right",
            "inline": false,
            "values": [
                {
                    "label": "Ter informatie",
                    "value": "terInformatie"
                },
                {
                    "label": "Voor wensen/bedenkingen",
                    "value": "voorWensenBedenkingen"
                },
                {
                    "label": "Opiniërend",
                    "value": "opinierend"
                }
            ],
            "validate": {
                "required": true
            },
            "customConditional": "show = !!data.RB_BriefRaad && data.CO_Betreft === 'collegevoorstel' && data.CO_CollegevoorstelNaarRaad === 'ja';"
        },
        {
            "label": "Raadsvoorstel moet naar de Raad:",
            "widget": "html5",
            "tableView": true,
            "data": {
                "values": [
                    {
                        "label": "Ja, ter bespreking",
                        "value": "jaTerBespreking"
                    },
                    {
                        "label": "Ja, ter besluitvorming",
                        "value": "jaTerBesluitvorming"
                    }
                ]
            },
            "validate": {
                "required": true
            },
            "validateWhenHidden": false,
            "key": "CO_RaadsvoorstelNaarRaad",
            "type": "select",
            "input": true,
            "disabled": true,
            "customConditional": "show = data.CO_Betreft === 'raadsvoorstel' && !!data.CO_RaadsvoorstelNaarRaad;"
        },
        {
            "label": "Opmerkingen College:",
            "type": "textarea",
            "key": "TA_BerichtTerugNaarSteller",
            "input": true,
            "autoExpand": false,
            "disabled": true,
            "validate": {
                "required": true
            },
            "customConditional": "show = data.TA_BerichtTerugNaarSteller && data.TA_BerichtTerugNaarSteller.trim() !== '';"
        },
        {
            "label": "Tekstuele wijzigingen bij ‘Vastgesteld onder mandaat’ door College:",
            "type": "textarea",
            "key": "TA_BerichtTekstueleWijzigingen",
            "input": true,
            "autoExpand": false,
            "disabled": true,
            "validate": {
                "required": true
            },
            "customConditional": "show = data.TA_BerichtTekstueleWijzigingen && data.TA_BerichtTekstueleWijzigingen.trim() !== '';"
        },
        {
            "label": "Tekstuele wijzigingen bij ‘Gewijzigd vastgesteld' door College:",
            "type": "textarea",
            "key": "TA_BerichtSCV",
            "input": true,
            "autoExpand": false,
            "disabled": true,
            "customConditional": "show = data.TA_BerichtSCV && data.TA_BerichtSCV.trim() !== '';"
        },
        {
            "label": "Buttons",
            "key": "buttons",
            "type": "container",
            "input": false,
            "tableView": false,
            "components": [
                {
                    "type": "columns",
                    "columns": [
                        {
                            "width": "auto",
                            "components": [
                                {
                                    "key": "submit",
                                    "label": "Afronden",
                                    "type": "button",
                                    "input": true,
                                    "tableView": false
                                }
                            ]
                        },
                        {
                            "width": "auto",
                            "components": [
                                {
                                    "key": "save",
                                    "label": "Opslaan",
                                    "type": "button",
                                    "action": "saveState",
                                    "state": "draft",
                                    "disableOnInvalid": true,
                                    "input": true,
                                    "tableView": false
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}