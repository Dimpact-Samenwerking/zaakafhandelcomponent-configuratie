{
  "name": "SUBV_SN002",
  "title": "Subsidieplafond",
  "display": "form",
  "type": "form",
  "components": [
    {
      "label": "Subsidiejaar",
      "useLocaleSettings": true,
      "format": "yyyy",
      "description": "Kies een datum en dan wordt het jaartaal in het veld getoond.",
      "tableView": false,
      "datePicker": {
        "disableWeekends": false,
        "disableWeekdays": false,
        "startingDay": "1 // dit is mogelijk nodig om de kalender op maandag te laten beginnen."
      },
      "enableTime": false,
      "customOptions": "",
      "enableMinDateInput": true,
      "enableMaxDateInput": false,
      "validateWhenHidden": false,
      "key": "DF_Datum",
      "type": "datetime",
      "input": true,
      "widget": {
        "type": "calendar",
        "displayInTimezone": "viewer",
        "locale": "en",
        "useLocaleSettings": true,
        "allowInput": true,
        "mode": "single",
        "enableTime": false,
        "noCalendar": false,
        "format": "yyyy",
        "hourIncrement": 1,
        "minuteIncrement": 1,
        "time_24hr": false,
        "minDate": null,
        "disableWeekends": false,
        "disableWeekdays": false,
        "maxDate": null
      }
    },
    {
      "label": "Het subsidieplafond is bereikt (Check budget)",
      "optionsLabelPosition": "right",
      "tooltip": "Geef bij label een duidelijke omschrijving van het veld (deze is zichtbaar voor de gebruiker). \n Geef bij key een unieke waarde op, houd je daarbij aan de naamgevingsconventies (Bijv. TF_NaamZaakdataveldCamelCase).\nBij tooltip kun je extra uitleg geven bij een component. Wil je geen tooltip tonen? Haal dit key-value pair dan weg.",
      "inline": true,
      "tableView": false,
      "defaultValue": "Wil je dat 1 van de radiobuttons standaard aangevinkt staat? Geef dan die value (bijvoorbeeld x) op. Wil je geen default instellen? Haal dit key-value pair dan weg.",
      "values": [
        {
          "label": "Ja, aanvraag weigeren",
          "value": "weigeren",
          "shortcut": ""
        },
        {
          "label": "Ja, wel verder in behandeling nemen",
          "value": "behandelen",
          "shortcut": ""
        },
        {
          "label": "Nee",
          "value": "nee",
          "shortcut": ""
        }
      ],
      "dataType": "boolean",
      "clearOnHide": false,
      "validateWhenHidden": false,
      "key": "RB_SubsidieplafondIsBereikt",
      "type": "radio",
      "input": true
    },
    {
      "label": "Opmerking",
      "applyMaskOn": "change",
      "autoExpand": false,
      "tableView": true,
      "validateWhenHidden": false,
      "key": "TA_opmerking",
      "type": "textarea",
      "input": true
    },
    {
      "label": "Buttons",
      "key": "buttons",
      "type": "container",
      "input": false,
      "tableView": false,
      "components": [
        {
          "type": "columns",
          "columns": [
            {
              "width": "auto",
              "components": [
                {
                  "key": "save",
                  "label": "Opslaan",
                  "type": "button",
                  "theme": "secondary",
                  "input": true,
                  "action": "saveState",
                  "state": "draft",
                  "tableView": false
                }
              ],
              "offset": 0,
              "push": 0,
              "pull": 0,
              "size": "md",
              "currentWidth": "auto"
            },
            {
              "width": "auto",
              "components": [
                {
                  "key": "submit",
                  "label": "Opslaan & afronden",
                  "type": "button",
                  "input": true,
                  "disableOnInvalid": true,
                  "tableView": false
                }
              ],
              "offset": 0,
              "push": 0,
              "pull": 0,
              "size": "md",
              "currentWidth": "auto"
            }
          ],
          "input": false,
          "key": "columns",
          "tableView": false,
          "label": "Columns"
        }
      ]
    }
  ]
}