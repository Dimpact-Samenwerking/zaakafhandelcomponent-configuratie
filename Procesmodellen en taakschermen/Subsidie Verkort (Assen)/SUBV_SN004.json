{
  "name": "SUBV_SN004",
  "title": "Keuze onderdelen inhoudelijk beoordelen",
  "display": "form",
  "type": "form",
  "components": [
    {
      "title": "Keuze onderdelen inhoudelijk beoordelen",
      "collapsible": false,
      "key": "keuzeOnderdelenInhoudelijkBeoordelen",
      "type": "panel",
      "label": "Panel",
      "input": false,
      "tableView": false,
      "components": [
        {
          "html": "<p>Beoordelen van de aangevraagde activiteiten</p>",
          "label": "Content",
          "refreshOnChange": false,
          "key": "content",
          "type": "content",
          "input": false,
          "tableView": false
        },
        {
          "label": "Regeling",
          "disabled": true,
          "calculateValue": "value = data.SB_regelingen;",
          "key": "TF_Regeling",
          "type": "textfield",
          "input": true,
          "customConditional": "show = !!data.SB_regelingen"
      },
        {
          "label": "Verordening",
          "applyMaskOn": "change",
          "calculateValue": "value = data.SB_verordening;",
          "key": "TF_verordening",
          "type": "textfield",
          "input": true,
          "disabled": true,
          "customConditional": "show = !!data.SB_verordening;"
        }
      ]
    },
    {
      "label": "Is de aanvraag akkoord",
      "optionsLabelPosition": "right",
      "inline": true,
      "tableView": false,
      "values": [
        {
          "label": "Ja",
          "value": "true",
          "shortcut": ""
        },
        {
          "label": "Nee",
          "value": "false",
          "shortcut": ""
        }
      ],
      "validateWhenHidden": false,
      "key": "RB_isDeAanvraagAkkoord",
      "type": "radio",
      "input": true
    },
    {
      "label": "Opmerking",
      "applyMaskOn": "change",
      "autoExpand": false,
      "tableView": true,
      "validateWhenHidden": false,
      "key": "opmerking",
      "type": "textarea",
      "input": true,
      "rows": 5
    },
    {
      "label": "Buttons",
      "key": "buttons",
      "type": "container",
      "input": false,
      "tableView": false,
      "components": [
        {
          "type": "columns",
          "columns": [
            {
              "width": "auto",
              "components": [
                {
                  "key": "save",
                  "label": "Opslaan",
                  "type": "button",
                  "input": true,
                  "action": "saveState",
                  "state": "draft",
                  "tableView": false
                }
              ],
              "offset": 0,
              "push": 0,
              "pull": 0,
              "size": "md",
              "currentWidth": "auto"
            },
            {
              "width": "auto",
              "components": [
                {
                  "key": "submit",
                  "label": "Opslaan & afronden",
                  "type": "button",
                  "input": true,
                  "disableOnInvalid": true,
                  "tableView": false
                }
              ],
              "offset": 0,
              "push": 0,
              "pull": 0,
              "size": "md",
              "currentWidth": "auto"
            }
          ],
          "input": false,
          "key": "columns",
          "tableView": false,
          "label": "Columns"
        }
      ]
    }
  ]
}