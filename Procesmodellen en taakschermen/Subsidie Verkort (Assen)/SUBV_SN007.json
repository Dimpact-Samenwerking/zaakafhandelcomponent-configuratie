{
  "name": "SUBV_SN007",
  "title": "Voortgangsbewaking",
  "display": "form",
  "type": "form",
  "components": [
    {
      "title": "Voortgangsbewaking",
      "collapsible": false,
      "key": "PA_voorgangsbewaking",
      "type": "panel",
      "label": "Panel",
      "input": false,
      "tableView": false,
      "components": [
        {
          "label": "De stukken voor de subsidie vaststelling zijn ontvangen",
          "optionsLabelPosition": "right",
          "inline": false,
          "tableView": false,
          "values": [
            {
              "label": "Ja, ontvangen",
              "value": "jaOntvangen",
              "shortcut": ""
            },
            {
              "label": "Nee/niet volledig ",
              "value": "neeNietVolledig",
              "shortcut": ""
            },
            {
              "label": "Herstel termijn verlopen",
              "value": "herstelTermijnVerlopen",
              "shortcut": ""
            },
            {
              "label": "Geen vaststelling",
              "value": "false",
              "shortcut": ""
            }
          ],
          "validateWhenHidden": false,
          "key": "RB_deStukkenVoorDeSubsidieVaststellingZijnOntvangen",
          "type": "radio",
          "input": true
        },
        {
          "label": "Datum van ontvangst van stukken",
          "format": "mm-MM-yyyy",
          "tableView": false,
          "datePicker": {
            "disableWeekends": false,
            "disableWeekdays": false
          },
          "enableTime": false,
          "enableMinDateInput": false,
          "enableMaxDateInput": false,
          "validateWhenHidden": false,
          "key": "DF_datumVanOntvangstVanStukken",
          "conditional": {
            "show": true,
            "when": "RB_deStukkenVoorDeSubsidieVaststellingZijnOntvangen",
            "eq": "jaOntvangen"
          },
          "type": "datetime",
          "input": true,
          "widget": {
            "type": "calendar",
            "displayInTimezone": "viewer",
            "locale": "en",
            "useLocaleSettings": false,
            "allowInput": true,
            "mode": "single",
            "enableTime": false,
            "noCalendar": false,
            "format": "mm-MM-yyyy",
            "hourIncrement": 1,
            "minuteIncrement": 1,
            "time_24hr": false,
            "minDate": null,
            "disableWeekends": false,
            "disableWeekdays": false,
            "maxDate": null
          }
        },
        {
          "label": "Opmerking",
          "applyMaskOn": "change",
          "autoExpand": false,
          "tableView": true,
          "validateWhenHidden": false,
          "key": "TA_opmerking",
          "type": "textarea",
          "input": true
        }
      ]
    },
    {
      "label": "Buttons",
      "key": "buttons",
      "type": "container",
      "input": false,
      "tableView": false,
      "components": [
        {
          "type": "columns",
          "columns": [
            {
              "width": "auto",
              "components": [
                {
                  "key": "save",
                  "label": "Opslaan",
                  "type": "button",
                  "input": true,
                  "action": "saveState",
                  "state": "draft",
                  "tableView": false
                }
              ],
              "offset": 0,
              "push": 0,
              "pull": 0,
              "size": "md",
              "currentWidth": "auto"
            },
            {
              "width": "auto",
              "components": [
                {
                  "key": "submit",
                  "label": "Opslaan & afronden",
                  "type": "button",
                  "input": true,
                  "disableOnInvalid": true,
                  "tableView": false
                }
              ],
              "offset": 0,
              "push": 0,
              "pull": 0,
              "size": "md",
              "currentWidth": "auto"
            }
          ],
          "input": false,
          "key": "columns",
          "tableView": false,
          "label": "Columns"
        }
      ]
    }
  ]
}