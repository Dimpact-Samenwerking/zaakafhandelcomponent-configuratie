{
    "name": "BER_ITS002",
    "title": "Behandelen beroepschrift",
    "display": "form",
    "type": "form",
    "components": [
        {
            "html": "<h2>Behandelen beroepschrift</h2>",
            "label": "HF_BehandelenBeroepschrift",
            "refreshOnChange": false,
            "key": "HF_BehandelenBeroepschrift",
            "type": "content",
            "input": false,
            "tableView": false
        },
        {
            "html": "<p>HIER EEN TOELICHTING OVER DE OPTIES BIJ HET INHOUDELIJK BEHANDELEN VAN HET BEROEPSCHRIFT.</p>",
            "label": "PA_ToelichtingBehandelenBeroepschrift",
            "refreshOnChange": false,
            "key": "PA_ToelichtingBehandelenBeroepschrift",
            "type": "content",
            "input": false,
            "tableView": false
        },
        {
            "label": "Wat wil je doen?",
            "type": "radio",
            "key": "RB_VervolgstapInhoudelijkBehandelen",
            "input": true,
            "optionsLabelPosition": "right",
            "inline": false,
            "values": [
                {
                    "label": "Een verweerschrift opstellen",
                    "value": "verweerschrift"
                },
                {
                    "label": "Een nieuwe beslissing op bezwaar (BOB) opstellen",
                    "value": "bob"
                },
                {
                    "label": "Afstemming na uitspraak met afdeling en portefeuillehouder",
                    "value": "afstemming"
                }
            ],
            "validate": {
                "required": true
            }
        },
        {
            "label": "Opmerkingen:",
            "type": "textarea",
            "key": "TA_OpmerkingenBehandelenBeroepschrift",
            "input": true,
            "autoExpand": true,
            "validate": {
                "required": true
            }
        },
        {
            "type": "smartDocumentsFieldset",
            "key": "TM_DocumentMakenBehandelenBeroepschrift",
            "input": false,
            "components": [
                {
                    "label": "Kies een sjabloon",
                    "type": "select",
                    "key": "TM_DocumentMakenBehandelenBeroepschrift_Template",
                    "input": true,
                    "widget": "html5",
                    "dataSrc": "custom",
                    "clearOnRefresh": true
                },
                {
                    "label": "Maak document",
                    "type": "button",
                    "key": "TM_DocumentMakenBehandelenBeroepschrift_Create",
                    "input": true,
                    "action": "event",
                    "showValidations": false,
                    "tableView": false,
                    "event": "createDocument",
                    "properties": {
                        "SmartDocuments_Group": "Hier de folder/subfolder zoals in SD bekend",
                        "SmartDocuments_<Data_Test>_InformatieobjecttypeUuid": "Hier een UUID, nakijken welke",
                        "SmartDocuments_<OpenZaakTest>_InformatieobjecttypeUuid": "Hier een UUID, nakijken welke"
                    }
                }
            ]
        },
        {
            "label": "Buttons",
            "key": "buttons",
            "type": "container",
            "input": false,
            "tableView": false,
            "components": [
                {
                    "type": "columns",
                    "columns": [
                        {
                            "width": "auto",
                            "components": [
                                {
                                    "key": "save",
                                    "label": "Opslaan",
                                    "type": "button",
                                    "theme": "secondary",
                                    "input": true,
                                    "action": "saveState",
                                    "state": "draft",
                                    "tableView": false
                                }
                            ]
                        },
                        {
                            "width": "auto",
                            "components": [
                                {
                                    "key": "submit",
                                    "label": "Opslaan & afronden",
                                    "type": "button",
                                    "input": true,
                                    "disableOnInvalid": true,
                                    "tableView": false
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}