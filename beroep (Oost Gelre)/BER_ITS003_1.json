            "enableMaxDateInput": false,
            "widget": {
                "type": "calendar",
                "displayInTimezone": "viewer",
                "locale": "nl",
                "useLocaleSettings": true,
                "allowInput": true,
                "mode": "single",
                "enableTime": false,
                "noCalendar": false,
                "format": "dd-MM-yyyy"
