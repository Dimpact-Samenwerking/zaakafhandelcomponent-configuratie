{
    "name": "BER_ITS003_2",
    "title": "Wachten op uitnodiging zitting",
    "display": "form",
    "type": "form",
    "components": [
        {
            "html": "<h2>Wachten op uitnodiging zitting</h2>",
            "label": "HF_WachtenOpUitnodigingZitting",
            "refreshOnChange": false,
            "key": "HF_WachtenOpUitnodigingZitting",
            "type": "content",
            "input": false,
            "tableView": false
        },
        {
            "html": "<p>HIER EEN TOELICHTING OP DE STAPPEN DIE IN DEZE TAAK GEZET MOETEN WORDEN.<br>KIJKEN OF DF'S UIT VORIGE TAAK HIER OOK GETOOND KUNNEN WORDEN ${data.DF_DatumStukkenNaarDeRechtbank} EN ${data.DF_DatumVerzendingVerweerschrift} </p>",
            "label": "PA_ToelichtingWachtenOpUitnodigingZitting",
            "refreshOnChange": false,
            "key": "PA_ToelichtingWachtenOpUitnodigingZitting",
            "type": "content",
            "input": false,
            "tableView": false
        },
        {
            "label": "Datum zitting",
            "type": "datetime",
            "key": "DF_DatumZitting",
            "input": true,
            "useLocaleSettings": true,
            "format": "dd-MM-yyyy",
            "datePicker": {
                "disableWeekends": false,
                "disableWeekdays": false
            },
            "enableTime": false,
            "enableMinDateInput": true,
            "enableMaxDateInput": false,
            "widget": {
                "type": "calendar",
                "displayInTimezone": "viewer",
                "locale": "nl",
                "useLocaleSettings": true,
                "allowInput": true,
                "mode": "single",
                "enableTime": false,
                "noCalendar": false,
                "format": "dd-MM-yyyy"
            },
            "validate": {
                "required": true
            }
        },
        {
            "label": "Opmerkingen:",
            "type": "textarea",
            "key": "TA_OpmerkingenDatumZitting",
            "input": true,
            "autoExpand": true,
            "validate": {
                "required": true
            }
        },
        {
            "type": "smartDocumentsFieldset",
            "key": "TM_DocumentMakenDatumZitting",
            "input": false,
            "components": [
                {
                    "label": "Kies een sjabloon",
                    "type": "select",
                    "key": "TM_DocumentMakenDatumZitting_Template",
                    "input": true,
                    "widget": "html5",
                    "dataSrc": "custom",
                    "clearOnRefresh": true
                },
                {
                    "label": "Maak document",
                    "type": "button",
                    "key": "TM_DocumentMakenDatumZitting_Create",
                    "input": true,
                    "action": "event",
                    "showValidations": false,
                    "tableView": false,
                    "event": "createDocument",
                    "properties": {
                        "SmartDocuments_Group": "Hier de folder/subfolder zoals in SD bekend",
                        "SmartDocuments_<Data_Test>_InformatieobjecttypeUuid": "Hier een UUID, nakijken welke",
                        "SmartDocuments_<OpenZaakTest>_InformatieobjecttypeUuid": "Hier een UUID, nakijken welke"
                    }
                }
            ]
        },
        {
            "label": "Buttons",
            "key": "buttons",
            "type": "container",
            "input": false,
            "tableView": false,
            "components": [
                {
                    "type": "columns",
                    "columns": [
                        {
                            "width": "auto",
                            "components": [
                                {
                                    "key": "save",
                                    "label": "Opslaan",
                                    "type": "button",
                                    "theme": "secondary",
                                    "input": true,
                                    "action": "saveState",
                                    "state": "draft",
                                    "tableView": false
                                }
                            ]
                        },
                        {
                            "width": "auto",
                            "components": [
                                {
                                    "key": "submit",
                                    "label": "Opslaan & afronden",
                                    "type": "button",
                                    "input": true,
                                    "disableOnInvalid": true,
                                    "tableView": false
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}