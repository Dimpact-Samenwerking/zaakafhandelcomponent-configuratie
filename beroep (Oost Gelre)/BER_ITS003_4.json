{
    "name": "ZTC_ITS00x",
    "title": "?Titel boven het taakscherm?. Enkelvoudig formulier. Dit schermtemplate bevat zowel een opslaan (van ingevulde zaakdata) als een submit button.",
    "display": "form",
    "type": "form",
    "components": [
        {
            "html": "<h2>Wachten op uitspraak</h2><p><strong>Datum stukken naar rechtbank<br /></strong>${zaakdata.INH_DF_DatumStukkenNaarRechtbank}</p>",
            "label": "PA_Toelichting",
            "refreshOnChange": false,
            "key": "PA_Toelichting",
            "type": "content",
            "input": false,
            "tableView": false
        },
        {
            "label": "Datum uitspraak",
            "type": "datetime",
            "key": "DF_DatumUitspraak",
            "input": true,
            "useLocaleSettings": true,
            "format": "dd-MM-yyyy",
            "datePicker": {
                "disableWeekends": false,
                "disableWeekdays": false
            },
            "enableTime": false,
            "enableMinDateInput": true,
            "enableMaxDateInput": false,
            "widget": {
                "type": "calendar",
                "displayInTimezone": "viewer",
                "locale": "nl",
                "useLocaleSettings": true,
                "allowInput": true,
                "mode": "single",
                "enableTime": false,
                "noCalendar": false,
                "format": "dd-MM-yyyy"
            },
            "validate": {
                "required": true
            }
        },
        
        {
            "label": "Opmerkingen",
            "type": "textarea",
            "key": "TA_OpmerkingenNaUitspraak",
            "input": true,
            "autoExpand": false,
            "validate": {
                "required": true
            }
        },
        {
            "type": "smartDocumentsFieldset",
            "key": "TM_DocumentMakenNaUitspraak",
            "input": false,
            "label": "Een document maken:",
            "components": [
                {
                    "label": "Kies een sjabloon",
                    "type": "select",
                    "key": "TM_DocumentMakenNaUitspraak_Template",
                    "input": true,
                    "widget": "html5",
                    "dataSrc": "custom",
                    "clearOnRefresh": true
                },
                {
                    "label": "Maak document",
                    "type": "button",
                    "key": "TM_DocumentMakenNaUitspraak_Create",
                    "input": true,
                    "action": "event",
                    "showValidations": false,
                    "tableView": false,
                    "event": "createDocument",
                    "properties": {
                        "SmartDocuments_Group": "Hier de folder/subfolder zoals in SD bekend",
                        "SmartDocuments_<Data_Test>_InformatieobjecttypeUuid": "Hier een UUID, nakijken welke",
                        "SmartDocuments_<OpenZaakTest>_InformatieobjecttypeUuid": "Hier een UUID, nakijken welke"
                    }
                }
            ]
        },{
            "label": "Buttons",
            "key": "buttons",
            "type": "container",
            "input": false,
            "tableView": false,
            "components": [
                {
                    "type": "columns",
                    "columns": [
                        {
                            "width": "auto",
                            "components": [
                                {
                                    "key": "save",
                                    "label": "Opslaan",
                                    "type": "button",
                                    "theme": "secondary",
                                    "input": true,
                                    "action": "saveState",
                                    "state": "draft",
                                    "tableView": false
                                }
                            ]
                        },
                        {
                            "width": "auto",
                            "components": [
                                {
                                    "key": "submit",
                                    "label": "Opslaan & afronden",
                                    "type": "button",
                                    "input": true,
                                    "disableOnInvalid": true,
                                    "tableView": false
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}