{
    "name": "BER_ITS004_1",
    "title": "Opstellen beslissing op bezwaar",
    "display": "form",
    "type": "form",
    "components": [
        {
            "html": "<h2>Opstellen beslissing op bezwaar</h2>",
            "label": "HF_OpstellenBeslissingOpBezwaar",
            "refreshOnChange": false,
            "key": "HF_OpstellenBeslissingOpBezwaar",
            "type": "content",
            "input": false,
            "tableView": false
        },
        {
            "html": "<p><strong>Opmerking inhoudelijk behandelen: </strong>{{data.TA_OpmerkingenBehandelenBeroepschrift}}</p>",
            "label": "PA_ToelichtingOpstellenBeslissingOpBezwaar",
            "refreshOnChange": false,
            "key": "PA_ToelichtingOpstellenBeslissingOpBezwaar",
            "type": "content",
            "input": false,
            "tableView": false
        },
        {
            "html": "<p><strong>Opmerking ondertekenaar: </strong>{{data.TA_OpmerkingenOndertekenaarBeslissingOpBezwaar}}</p>",
            "label": "PA_ToelichtingOndertekenaarNieuweBOB",
            "refreshOnChange": false,
            "key": "PA_ToelichtingOndertekenaarNieuweBOB",
            "type": "content",
            "input": false,
            "tableView": false,
            "conditional": {
                "show": true,
                "when": "RB_OndertekenaarBOBAkkoord",
                "eq": false
            }
        },
        {
            "type": "smartDocumentsFieldset",
            "key": "TM_DocumentMakenNieuweBeslissingOpBezwaar",
            "input": false,
            "label": "Een document maken:",
            "components": [
                {
                    "label": "Kies een sjabloon",
                    "type": "select",
                    "key": "TM_DocumentMakenNieuweBeslissingOpBezwaar_Template",
                    "input": true,
                    "widget": "html5",
                    "dataSrc": "custom",
                    "clearOnRefresh": true
                },
                {
                    "label": "Maak document",
                    "type": "button",
                    "key": "TM_DocumentMakenNieuweBeslissingOpBezwaar_Create",
                    "input": true,
                    "action": "event",
                    "showValidations": false,
                    "tableView": false,
                    "event": "createDocument",
                    "properties": {
                        "SmartDocuments_Group": "Hier de folder/subfolder zoals in SD bekend",
                        "SmartDocuments_<Data_Test>_InformatieobjecttypeUuid": "Hier een UUID, nakijken welke",
                        "SmartDocuments_<OpenZaakTest>_InformatieobjecttypeUuid": "Hier een UUID, nakijken welke"
                    }
                }
            ]
        },
        {
            "label": "Is er een nieuwe beslissing op bezwaar die ondertekend moet worden?",
            "key": "RB_OndertekenenNieuweBeslissingOpBezwaar",
            "type": "radio",
            "input": true,
            "optionsLabelPosition": "right",
            "inline": false,
            "tableView": false,
            "values": [
                {
                    "label": "Ja",
                    "value": true
                },
                {
                    "label": "Nee",
                    "value": false
                }
            ],
            "validateWhenHidden": false,
            "validate": {
                "required": true
            }
        },
        {
            "type": "documentsFieldset",
            "key": "DS_DocumentenNieuweBeslissingOpBezwaar",
            "input": false,
            "components": [
                {
                    "label": "Selecteer het document dat ondertekend moet worden:",
                    "type": "select",
                    "key": "DS_DocumentenNieuweBeslissingOpBezwaar_Select",
                    "input": true,
                    "widget": "choicesjs",
                    "multiple": true,
                    "defaultValue": [],
                    "clearOnRefresh": true,
                    "dataSrc": "custom",
                    "placeholder": "Selecteer documenten",
                    "customOptions": {
                        "choicesOptions": {
                            "removeItemButton": true,
                            "placeholder": true,
                            "searchEnabled": true,
                            "shouldSort": false
                        }
                    }
                }
            ],
            "conditional": {
                "show": true,
                "when": "RB_OndertekenenNieuweBeslissingOpBezwaar",
                "eq": true
            }
        },
        {
            "type": "groepMedewerkerFieldset",
            "key": "AGM_OndertekeningNieuweBeslissingOpBezwaarDoor",
            "label": "Selecteer de collega die het document moet ondertekenen:",
            "input": false,
            "components": [
                {
                    "label": "Groep",
                    "type": "select",
                    "key": "AGM_OndertekeningNieuweBeslissingOpBezwaarDoor_Groep",
                    "input": true,
                    "widget": "html5",
                    "dataSrc": "custom",
                    "clearOnRefresh": true
                },
                {
                    "label": "Medewerker",
                    "type": "select",
                    "key": "AGM_OndertekeningNieuweBeslissingOpBezwaarDoor_Medewerker",
                    "widget": "html5",
                    "input": true,
                    "dataSrc": "custom",
                    "refreshOn": "AGM_OndertekeningNieuweBeslissingOpBezwaarDoor_Groep",
                    "clearOnRefresh": true
                }
            ],
            "conditional": {
                "show": true,
                "when": "RB_OndertekenenNieuweBeslissingOpBezwaar",
                "eq": true
            }
        },
        {
            "label": "Opmerkingen voor de ondertekenaar:",
            "type": "textarea",
            "key": "TA_OpmerkingenTeOndertekenenDocumentenBOB",
            "input": true,
            "autoExpand": true,
            "validate": {
                "required": true
            },
            "conditional": {
                "show": true,
                "when": "RB_OndertekenenNieuweBeslissingOpBezwaar",
                "eq": true
            }
        },
        {
            "type": "groepMedewerkerFieldset",
            "key": "AGM_VerzendingNieuweBeslissingOpBezwaarDoor",
            "label": "Selecteer de collega die het document moet verzenden:",
            "input": false,
            "components": [
                {
                    "label": "Groep",
                    "type": "select",
                    "key": "AGM_VerzendingNieuweBeslissingOpBezwaarDoor_Groep",
                    "input": true,
                    "widget": "html5",
                    "dataSrc": "custom",
                    "clearOnRefresh": true
                },
                {
                    "label": "Medewerker",
                    "type": "select",
                    "key": "AGM_VerzendingNieuweBeslissingOpBezwaarDoor_Medewerker",
                    "widget": "html5",
                    "input": true,
                    "dataSrc": "custom",
                    "refreshOn": "AGM_VerzendingNieuweBeslissingOpBezwaarDoor_Groep",
                    "clearOnRefresh": true
                }
            ],
            "conditional": {
                "show": true,
                "when": "RB_OndertekenenNieuweBeslissingOpBezwaar",
                "eq": true
            }
        },
        {
            "label": "Buttons",
            "key": "buttons",
            "type": "container",
            "input": false,
            "tableView": false,
            "components": [
                {
                    "type": "columns",
                    "columns": [
                        {
                            "width": "auto",
                            "components": [
                                {
                                    "key": "save",
                                    "label": "Opslaan",
                                    "type": "button",
                                    "theme": "secondary",
                                    "input": true,
                                    "action": "saveState",
                                    "state": "draft",
                                    "tableView": false
                                }
                            ]
                        },
                        {
                            "width": "auto",
                            "components": [
                                {
                                    "key": "submit",
                                    "label": "Opslaan & afronden",
                                    "type": "button",
                                    "input": true,
                                    "disableOnInvalid": true,
                                    "tableView": false
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}