{
  "name": "VO_ITS071",
  "title": "Inhoudelijk beoordelen aanvraag",
  "display": "form",
  "type": "form",
  "components": [
    {
      "label": "Toelichting op adviesvraag:",
      "type": "textarea",
      "key": "TA_AdviesvraagAdviseur1",
      "autoExpand": true,
      "disabled": true,
      "input": false
    },
    {
      "label": "De aanvraag is inhoudelijk akkoord voor dit onderdeel:",
      "type": "radio",
      "key": "RB_AdviseurAkkoord1",
      "input": true,
      "optionsLabelPosition": "right",
      "inline": false,
      "validate": {
        "required": true
      },
      "values": [
        {
          "label": "Ja",
          "value": "ja"
        },
        {
          "label": "Nee",
          "value": "nee"
        }
      ]
    },
    {
      "label": "Reden niet akkoord:",
      "type": "textarea",
      "key": "TA_RedenNietAkkoordAdviseur1",
      "autoExpand": false,
      "input": true,
      "validate": {
        "required": true
      },
      "conditional": {
        "show": true,
        "when": "RB_AdviseurAkkoord1",
        "eq": "nee"
      }
    },
    {
      "label": "Buttons",
      "key": "buttons",
      "type": "container",
      "input": false,
      "tableView": false,
      "components": [
        {
          "type": "columns",
          "columns": [
            {
              "width": "auto",
              "components": [
                {
                  "key": "save",
                  "label": "Opslaan",
                  "type": "button",
                  "action": "saveState",
                  "state": "draft",
                  "input": true,
                  "tableView": false
                }
              ]
            },
            {
              "width": "auto",
              "components": [
                {
                  "key": "submit",
                  "label": "Opslaan & afronden",
                  "type": "button",
                  "disableOnInvalid": true,
                  "input": true,
                  "tableView": false
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
