{
  "name": "taak-2-formio",
  "title": "Taak 2",
  "display": "wizard",
  "components": [
    {
      "key": "pagina1",
      "type": "panel",
      "title": "Pagina 1",
      "label": "Pagina 1",
      "breadcrumbClickable": false,
      "input": false,
      "buttonSettings": {
        "next": true,
        "previous": true,
        "cancel": false
      },
      "components": [
        {
          "key": "omschrijving",
          "type": "textfield",
          "label": "Omschrijving",
          "input": true,
          "defaultValue": ":omschrijving"
        },
        {
          "key": "kiesVervolgPagina",
          "type": "radio",
          "label": "Kies vervolg pagina",
          "input": true,
          "optionsLabelPosition": "right",
          "validate": {
            "required": true
          },
          "validateWhenHidden": false,
          "values": [
            {
              "label": "Pagina 2",
              "value": "pagina2"
            },
            {
              "label": "Pagina 3",
              "value": "pagina3"
            }
          ]
        }
      ]
    },
    {
      "key": "pagina2",
      "type": "panel",
      "title": "Pagina 2",
      "label": "Pagina 2",
      "breadcrumbClickable": false,
      "input": false,
      "buttonSettings": {
        "next": true,
        "previous": true,
        "cancel": false
      },
      "conditional": {
        "show": true,
        "when": "kiesVervolgPagina",
        "eq": "pagina2"
      },
      "components": [
        {
          "label": "Tekst veld",
          "applyMaskOn": "change",
          "tableView": true,
          "validateWhenHidden": false,
          "key": "tekstVeld",
          "type": "textfield",
          "input": true
        },
        {
          "label": "Tekst vlak",
          "applyMaskOn": "change",
          "autoExpand": false,
          "tableView": true,
          "validateWhenHidden": false,
          "key": "tekstVlak",
          "type": "textarea",
          "input": true
        },
        {
          "label": "Nummer",
          "applyMaskOn": "change",
          "mask": false,
          "tableView": false,
          "delimiter": false,
          "requireDecimal": false,
          "inputFormat": "plain",
          "truncateMultipleSpaces": false,
          "validateWhenHidden": false,
          "key": "nummer",
          "type": "number",
          "input": true
        },
        {
          "label": "Checkbox",
          "tableView": false,
          "validateWhenHidden": false,
          "key": "checkbox",
          "type": "checkbox",
          "input": true
        },
        {
          "label": "Checkboxes",
          "optionsLabelPosition": "right",
          "tableView": false,
          "values": [
            {
              "label": "Waarde 1",
              "value": "waarde1"
            },
            {
              "label": "Waarde 2",
              "value": "waarde2"
            },
            {
              "label": "Waarde 3",
              "value": "waarde3"
            }
          ],
          "validateWhenHidden": false,
          "key": "checkboxes",
          "type": "selectboxes",
          "input": true,
          "inputType": "checkbox"
        }
      ]
    },
    {
      "key": "pagina3",
      "type": "panel",
      "title": "Pagina 3",
      "label": "Pagina 3",
      "breadcrumbClickable": false,
      "input": false,
      "buttonSettings": {
        "next": true,
        "previous": true,
        "cancel": false
      },
      "conditional": {
        "show": true,
        "when": "kiesVervolgPagina",
        "eq": "pagina3"
      },
      "components": [
        {
          "label": "Email",
          "applyMaskOn": "change",
          "tableView": true,
          "validateWhenHidden": false,
          "key": "email",
          "type": "email",
          "input": true
        },
        {
          "label": "Telefoonnummer",
          "applyMaskOn": "change",
          "tableView": true,
          "validateWhenHidden": false,
          "key": "telefoonnummer",
          "type": "phoneNumber",
          "input": true
        },
        {
          "label": "Datum",
          "tableView": false,
          "datePicker": {
            "disableWeekends": false,
            "disableWeekdays": false
          },
          "enableTime": false,
          "enableMinDateInput": false,
          "enableMaxDateInput": false,
          "validateWhenHidden": false,
          "key": "datum",
          "type": "datetime",
          "input": true,
          "widget": {
            "type": "calendar",
            "displayInTimezone": "viewer",
            "locale": "nl",
            "useLocaleSettings": false,
            "allowInput": true,
            "mode": "single",
            "enableTime": true,
            "noCalendar": false,
            "format": "yyyy-MM-dd hh:mm a",
            "hourIncrement": 1,
            "minuteIncrement": 1,
            "time_24hr": false,
            "minDate": null,
            "disableWeekends": false,
            "disableWeekdays": false,
            "maxDate": null
          }
        }
      ]
    }
  ]
}
